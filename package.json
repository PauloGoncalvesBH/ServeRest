{
  "name": "serverest",
  "version": "2.1.2",
  "description": "Servidor REST local de forma rápida e simples para estudo de testes de API",
  "author": "Paulo Gonçalves <paulorochag@hotmail.com> (https://www.linkedin.com/in/paulo-goncalves/)",
  "license": "MIT",
  "main": "./bin/server.js",
  "files": [
    "src/"
  ],
  "bin": {
    "serverest": "./bin/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/PauloGoncalvesBH/serverest.git"
  },
  "keywords": [
    "testing",
    "server",
    "rest",
    "api"
  ],
  "scripts": {
    "commit": "git-cz",
    "start": "node ./bin/server.js",
    "dev": "nodemon ./bin/server.js",
    "test": "mocha --config test/.mocharc.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "generate-doc": "npx aglio@2 -i serverest.apib --theme-variables flatly --theme-template triple -o src/doc/api-doc.html",
    "prerelease": "npm run lint && npm test",
    "release": "npx standard-version@8 --no-verify"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "colors": "^1.4.0",
    "connect-timeout": "^1.9.0",
    "express": "^4.17.1",
    "express-query-int": "^3.0.0",
    "express-validation": "^3.0.2",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nedb": "^1.8.0",
    "open": "^7.0.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@hapi/joi": "^17.1.1",
    "chai": "^4.2.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.3",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "globals": [
      "before",
      "describe",
      "it",
      "request"
    ]
  }
}
